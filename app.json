{
  "expo": {
    "name": "Opueh",
    "slug": "opueh-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "scheme": "opueh",
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.opueh.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Opueh uses your location to show you nearby matches."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.opueh.app",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            { "scheme": "https", "host": "opueh.app", "pathPrefix": "/" },
            { "scheme": "opueh" }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ],
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION"
      ]
    },
    "plugins": [
      ["expo-image-picker", {
        "photosPermission": "Opueh needs photo library access to upload profile photos.",
        "cameraPermission": "Opueh needs camera access for profile verification and photo uploads."
      }],
      "expo-font",
      ["expo-location", {
        "locationAlwaysAndWhenInUsePermission": "Opueh uses your location to show you nearby matches."
      }],
      ["expo-notifications", {
        "icon": "./assets/icon.png",
        "color": "#FF007B"
      }]
    ],
    "extra": {
      "eas": {
        "projectId": "ed6d4780-0314-499d-b3e7-7c5dd29d8a88"
      }
    }
  }
}
